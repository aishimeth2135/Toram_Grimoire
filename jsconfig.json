{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@global-components/*": ["./src/components/global/*"],
      "@services/*": ["./src/lib/main/services/*"],
      "@utils/*": ["./src/lib/main/utils/*"],
      "@grimoire": ["./src/lib/main/Grimoire.js"],
    }
  },
  "include": [
		"src/**/*.js",
		"src/**/*.vue"
	],
  "exclude": ["node_modules", "dist"],
  "typeAcquisition": {
    "exclude": ["dotenv"]
  }
}